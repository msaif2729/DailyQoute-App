<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/listback"
    android:layout_marginVertical="@dimen/_8sdp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qoute"
        android:textSize="@dimen/_15sdp"
        android:text="hello world"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        android:textSize="@dimen/_12sdp"
        android:text="hello world"
        android:layout_below="@id/qoute"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="@dimen/_10sdp"
        android:text="hello world"
        android:layout_below="@id/author"
        android:textColor="@color/white"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_24px"
        android:layout_below="@id/author"
        android:layout_alignParentRight="true"
        android:id="@+id/listshare"
        android:layout_marginLeft="@dimen/_20sdp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/redfavorite_24px"
        android:layout_below="@id/author"
        android:layout_toLeftOf="@id/listshare"
        android:id="@+id/listlike"
        />

</RelativeLayout>