<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar"
            android:background="@color/invisible"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Profile"
                app:navigationIcon="@drawable/close"
                app:titleTextColor="@color/white"
                android:id="@+id/topbar"
                />

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_15sdp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:background="@drawable/listback"
                android:drawableStart="@drawable/person_24px"
                android:padding="@dimen/_12sdp"
                android:drawableEnd="@drawable/edit_square_24px"
                android:textColor="@color/white"
                android:text="Saif Ansari"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_15sdp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:inputType="none"
                android:textCursorDrawable="@color/white"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:background="@drawable/listback"
                android:drawableStart="@drawable/gendersys"
                android:drawableEnd="@drawable/edit_square_24px"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/name"
                android:text="Male"
                android:layout_marginBottom="@dimen/_15sdp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:inputType="none"
                android:textCursorDrawable="@color/white"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/favcount"
                android:background="@drawable/listback"
                android:drawableStart="@drawable/redfavorite_24px"
                android:drawableEnd="@drawable/chevron_right_24px"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/gender"
                android:text="Favourite ( 7 )"
                android:layout_marginBottom="@dimen/_15sdp"
                android:editable="false"
                android:clickable="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/theme"
                android:background="@drawable/listback"
                android:drawableStart="@drawable/imagesearch_roller_24px"
                android:drawableEnd="@drawable/chevron_right_24px"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/favcount"
                android:text="Theme"
                android:layout_marginBottom="@dimen/_15sdp"
                android:editable="false"

                android:clickable="true"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:background="@drawable/listback"
                android:drawableStart="@drawable/menu_book_24px"
                android:drawableEnd="@drawable/chevron_right_24px"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/theme"
                android:text="Content Preference"
                android:editable="false"
                android:clickable="true"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listback"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="❤️ Developed By 'Mohammed Saif Ansari' ❤️"
                android:layout_alignParentBottom="true"
                />











        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>