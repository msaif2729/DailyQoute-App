<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro2"
    android:paddingHorizontal="@dimen/_35sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="@dimen/_75sdp"
        android:id="@+id/txt1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This information will be displayed in\n your profile"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="@font/poppinsmedium"
        android:layout_below="@id/txt1"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/lightgray"
        android:id="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />


    <Button
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Female"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:background="@drawable/genderbutton"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/txt2"
        android:layout_centerInParent="true"
        android:layout_marginVertical="15dp"
        android:theme="@style/AppTheme1"
        android:onClick="genderselected"
        />

    <Button
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Male"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:background="@drawable/genderbutton"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/female"
        android:layout_centerInParent="true"
        android:layout_marginVertical="15dp"
        android:theme="@style/AppTheme1"
        android:onClick="genderselected"
        />

    <Button
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Other"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:background="@drawable/genderbutton"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/male"
        android:layout_centerInParent="true"
        android:layout_marginVertical="15dp"
        android:theme="@style/AppTheme1"
        android:onClick="genderselected"
        />

    <Button
        android:id="@+id/nottosay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:text="Prefer not to say"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:background="@drawable/genderbutton"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/other"
        android:layout_centerInParent="true"
        android:layout_marginVertical="15dp"
        android:theme="@style/AppTheme1"
        android:onClick="genderselected"
        />


</RelativeLayout>